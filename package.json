{
  "name": "mpd3",
  "version": "0.2.0",
  "description": "Low level MPD (Music Player Daemon) client with Web Streams API",
  "main": "./dist/cjs/index.js",
  "type": "module",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "prokosna",
  "contributors": [
    "Cotko <cotkocot@gmail.com>",
    "Andrew Kelley <superjoe30@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build": "npm run build:esm && npm run build:cjs",
    "prepare": "npm run build",
    "lint": "biome lint ./lib/*.ts ./__tests__/*.ts --write --unsafe --max-diagnostics none",
    "fmt": "biome format ./lib/*.ts ./__tests__/*.ts --write",
    "test": "vitest run",
    "test:unit": "vitest run unit",
    "test:int": "vitest run int",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prokosna/mpd.js"
  },
  "keywords": [
    "mpd",
    "mpd2",
    "mpd3",
    "music",
    "player",
    "daemon",
    "client",
    "protocol"
  ],
  "dependencies": {
    "debug": "^4.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@vitest/coverage-v8": "^3.1.2",
    "typescript": "^5.8.2",
    "vitest": "^3.1.2"
  }
}
